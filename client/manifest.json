{
    "manifest_version": 2,
    "name": "Chat",
    "description": "Rumorboys chat",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/inactive.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["dist/peer.js", "dist/bundle.js"],
            "css": ["css/style.css"],
            "run_at": "document_end"
        }
    ],

    "permissions": ["activeTab"]
}
